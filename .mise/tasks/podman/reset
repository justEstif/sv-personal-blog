#!/usr/bin/env fish
#MISE description="Destroy pod, containers, and volumes (DESTRUCTIVE)"

# Stop and remove the pod
podman pod rm -f $POD_NAME 2>/dev/null; or true

# Remove containers individually (in case pod removal doesn't remove them)
podman rm -f $POSTGRES_CONTAINER_NAME 2>/dev/null; or true
podman rm -f $MINIO_CONTAINER_NAME 2>/dev/null; or true

# Remove volumes
podman volume rm $POSTGRES_VOLUME_NAME 2>/dev/null; or true
podman volume rm $MINIO_VOLUME_NAME 2>/dev/null; or true

echo "âœ“ Reset complete"
